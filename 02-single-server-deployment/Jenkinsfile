pipeline {
    agent any

    environment {
        SERVER_IP = credentials('ubuntu_24LTS_ip')
    }
    stages {
        stage('Setup') {
            steps {
                sh '''
                    cd 02-single-server-deployment

                    python3 -m venv venv
                    venv/bin/python -m pip install --upgrade pip
                    venv/bin/python -m pip install -r requirements.txt
                '''
            }
        }

        stage('Testing') {
            steps {
                sh '''
                    cd 02-single-server-deployment

                    venv/bin/python -m pytest
                '''
            }
        }  

        stage('Package code') {
            steps {
                sh '''
                    cd 02-single-server-deployment

                    zip -r myapp.zip . \
                        -x "venv/*" \
                        -x ".git/*" \
                        -x "__pycache__/*" \
                        -x ".pytest_cache/*"

                    ls -lh myapp.zip
                '''
            }
        }

        stage('Deploy - Test SSH') {
            steps {
                withCredentials([sshUserPrivateKey(
                    credentialsId: 'ubuntu_private_sshkey',
                    keyFileVariable: 'MY_SSH_KEY',
                    usernameVariable: 'username'
                )]) {
                    sh '''
                        ssh -i $MY_SSH_KEY -o StrictHostKeyChecking=no \
                        ${username}@${SERVER_IP} "echo SSH_CONNECTION_OK"

                        scp -i $MY_SSH_KEY -o StrictHostKeyChecking=no \
                        myapp.zip ${username}@${SERVER_IP}:/home/rohith/
                    '''
                }
            }
        }      
           
    }
}